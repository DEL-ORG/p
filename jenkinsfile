pipeline {
    agent any
    triggers {
        githubPush()
    }
    stages {
        stage('Build') {
            steps {
                sh """
                   ls -l /home
                   ls -l /
                   """
            }
        }
        stage('Test') {
            steps {
                sh """
                   ls -l /home
                   sleep 20
                   """
            }
        }
        stage('Deploy') {
            steps {
                sh """
                   ls -l /home
                   """
            }
        }
    }
}
